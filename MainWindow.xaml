<Window x:Class="TravellingSalesmanProblem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravellingSalesmanProblem"
        mc:Ignorable="d"
        Title="Travelling Salesman Problem" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" BorderThickness="1" BorderBrush="Gray">
            <Canvas Width="450" Height="450" x:Name="cityCanvas"/>
        </Border>
        <Button Grid.Column="1" Padding="15,1,15,1" VerticalAlignment="Top" HorizontalAlignment="Center" x:Name="startButton" Content="Start" Margin="10" Click="startButton_Click"/>
        <Button Grid.Column="1" Padding="15,1,15,1" VerticalAlignment="Top" HorizontalAlignment="Center" x:Name="stopButton" Content="Stop" Margin="10,40,10,10" Click="stopButton_Click"/>
        <Label x:Name="statsLabel" Grid.Column="1" VerticalAlignment="Top" Content="Tried Paths: XXXXXX/XXXXXX (XXX.X%)" Margin="0,70,0,0"/>
    </Grid>
</Window>
